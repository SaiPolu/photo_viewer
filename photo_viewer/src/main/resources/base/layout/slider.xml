<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
        <Image
            ohos:id="$+id:image_img"
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:image_src="$media:img"
            ohos:layout_alignment="top"/>


        <Slider
            ohos:id="$+id:slider_seek"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:bottom_margin="26vp"
            ohos:bottom_padding="36vp"
            ohos:layout_alignment="horizontal_center"


            />
        <Text
            ohos:id="$+id:text_zoom"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Zoom"

            ohos:text_size="20vp"
            ohos:bottom_margin="26vp"
            ohos:bottom_padding="80vp"
            ohos:below="$+id:slider_seek"
            />
</DirectionalLayout>